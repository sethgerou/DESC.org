<div class="">
    <%= form_for @page, url: page_path do |f| %>
  <div class="">
    <ul class="errors">
      <% if @page %>
        <% @page.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div class="">
    <%= f.label :title %>
    <%= f.text_field :title, value: @page.title %>
  </div>
  <div class="">
    <%= f.label :body %>
    <%= f.text_area :body, value: @page.body, class: "tinymce" %>
  </div>
    <%= f.submit "Submit" %>
    <% end %>
</div>

<%= tinymce %>
